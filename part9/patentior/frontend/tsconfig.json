{
  "compilerOptions": {
    /* Target moderno e libs do navegador */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Módulos e resolução */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* JSX e React */
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* Tipagem e linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    /* Emit */
    "noEmit": true
  },
  "include": ["src"]
}
